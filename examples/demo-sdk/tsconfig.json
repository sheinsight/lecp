{
	"compilerOptions": {
		// Modules
		"target": "ESNext",

		"module": "Preserve", // ts@5.4支持, 支持 import x = require("dep")

		// 默认开启("module": "Preserve") ↓↓↓
		// "module": "ESNext",
		// "moduleResolution": "bundler",
		// "resolveJsonModule": true,
		// "esModuleInterop": true,

		// 设置后强制要求写后缀
		// "module": "NodeNext",
		// "moduleResolution": "nodenext",

		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true, // ts@5.0支持
		"isolatedDeclarations": true, // perf
		// isolatedModules:true, // verbatimModuleSyntax:true 默认开启

		// lint
		"strict": true,
		"skipLibCheck": true, // perf
		"forceConsistentCasingInFileNames": true,

		// dts
		"noEmit": true,
		"emitDeclarationOnly": true,
		"declaration": true,
		"declarationMap": true,

		// alias
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	}
}
