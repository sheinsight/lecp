{
	"name": "lecp-root",
	"version": "0.3.0",
	"private": true,
	"description": "",
	"keywords": [],
	"license": "MIT",
	"author": "",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sheinsight/lecp.git"
	},
	"files": [],
	"type": "module",
	"scripts": {
		"test": "pnpm test:js && pnpm test:rust",
		"test:js": "vitest --run",
		"test:rust": "cargo test --all --all-targets --all-features",
		"format": "oxfmt && cargo +nightly fmt --all",
		"lint": "pnpm lint:tsc && pnpm lint:js && pnpm lint:rust",
		"lint:tsc": "pnpm -r --filter=!\"./crates/**\" exec tsc --noEmit",
		"lint:js": "oxlint && oxfmt --check",
		"lint:rust": "cargo clippy --all --all-targets --all-features -- -D warnings && cargo +nightly fmt --all -- --check",
		"build": "pnpm build:rust && pnpm build:node",
		"build:rust": "pnpm --filter=\"./crates/**\" build",
		"build:node": "pnpm --filter=\"./packages/**\" build",
		"build:binding": "pnpm --filter=\"./crates/node_binding\" build",
		"docs:build": "rspress build",
		"docs:dev": "rspress dev",
		"docs:preview": "rspress preview",
		"prerelease": "pnpm run test",
		"release": "bumpp -r --no-push && pnpm run build:binding && TAG=$(git describe --tags --abbrev=0) && git add . && git commit --amend --no-edit && git tag -f \"$TAG\""
	},
	"devDependencies": {
		"@rspress/core": "2.0.0",
		"@shined/lecp": "workspace:*",
		"bumpp": "^10.4.0",
		"oxfmt": "^0.27.0",
		"oxlint": "^1.42.0",
		"tinyglobby": "^0.2.15",
		"typescript": "catalog:",
		"vitest": "catalog:"
	},
	"packageManager": "pnpm@10.27.0"
}
