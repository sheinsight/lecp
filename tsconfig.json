{
	"compilerOptions": {
		// Modules
		"target": "ESNext",
		"module": "Preserve",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,

		// lint
		"strict": true,
		"noUncheckedSideEffectImports": true,

		// perf
		"skipLibCheck": true,
		"isolatedDeclarations": true,

		// dts
		"emitDeclarationOnly": true,
		"declaration": true,
		"declarationMap": true
	},
	"exclude": ["**/dist", "**/es", "**/lib", "tests/**"]
}
