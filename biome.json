{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**"]
	},
	"linter": {
		"enabled": false
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"includes": [
			"**",
			"!**/crates/**/npm/**",
			"!**/target/**",
			"!**/dist/**",
			"!**/es/**",
			"!**/lib/**",
			"!**/umd/**",
			"!**/tests/**/snapshots/**"
		]
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none",
			"indentWidth": 4
		}
	}
}
