{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**"]
	},
	"linter": {
		"enabled": false
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		},
		"includes": [
			"**",
			"!**/crates/**/npm/**",
			"!**/crates/node_binding/index.*",
			"!**/target/**",
			"!**/dist/**",
			"!**/es/**",
			"!**/lib/**",
			"!**/umd/**",
			"!**/tests/**/snapshots/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"includes": [
			"**",
			"!**/crates/**/npm/**",
			"!**/crates/node_binding/index.*",
			"!**/target/**",
			"!**/dist/**",
			"!**/es/**",
			"!**/lib/**",
			"!**/umd/**",
			"!**/tests/**/snapshots/**",
			"!**/doc_build/**"
		]
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none",
			"indentWidth": 4
		}
	}
}
